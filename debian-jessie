FROM debian:jessie

RUN apt-get update; apt-get -y upgrade
RUN apt-get -y install git

COPY . /own-mailbox/
RUN cd /own-mailbox/ ; \
    DEBIAN_FRONTEND=noninteractive ./required_packages.sh
    
COPY . /own-mailbox/
RUN cd /own-mailbox/ ; \    
    DEBIAN_FRONTEND=noninteractive DOCKER=yes ./main.sh
